* {
    -webkit-user-select: none;  /* Запрет выделения текста */
    user-select: none;
    -webkit-tap-highlight-color: transparent; /* Убрать подсветку при тапе */
    -webkit-text-size-adjust: none; /* Запрет изменения размера текста */
    text-size-adjust: none;
    touch-action: manipulation; /* Оптимизация для тач-устройств */
}

html, body {
    overflow: hidden;  /* Убрать скролл */
    position: fixed;   /* Фиксированная позиция */
    width: 100%;       /* Фиксированная ширина */
    height: 100%;      /* Фиксированная высота  */
}

html, body {
    width: 100vh; /* Меняем ширину и высоту местами */
    height: 100vw;
    transform: rotate(90deg);
    transform-origin: 0 0;
    position: fixed;
    top: 0;
    left: 100vw; /* Сдвигаем вправо на высоту viewport */
}
