* {
    -webkit-user-select: none;  /* Запрет выделения текста */
    user-select: none;
    -webkit-tap-highlight-color: transparent; /* Убрать подсветку при тапе */
    -webkit-text-size-adjust: none; /* Запрет изменения размера текста */
    text-size-adjust: none;
    touch-action: manipulation; /* Оптимизация для тач-устройств */
}

html, body {
    overflow: hidden;  /* Убрать скролл */
    position: fixed;   /* Фиксированная позиция */
    width: 100%;       /* Фиксированная ширина */
    height: 100%;      /* Фиксированная высота  */
}

html, body {
    width: 100vh; /* Меняем ширину и высоту местами */
    height: 100vw;
    transform: rotate(90deg);
    transform-origin: 0 0;
    position: fixed;
    top: 0;
    left: 100vw; /* Сдвигаем вправо на высоту viewport */
}
.orientation-message {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.95);
    z-index: 1000;
    color: white;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
    padding: 20px;
    
    /* ДОБАВЬТЕ ЭТИ СТРОКИ ДЛЯ ПОЗИЦИОНИРОВАНИЯ */
    justify-content: flex-start; /* Изменяем выравнивание по вертикали */
    padding-top: 30%; /* Сдвигаем весь контент вниз по оси Y */
}

.orientation-message p {
    font-size: 20px;
    line-height: 1.5;
    opacity: 0.9;
    max-width: 80%;
